<div>
	@for (int i = 0; i < Stars; i++)
	{
		<span class="oi oi-star" aria-hidden="true" style="color:orange"></span>
	}

	@for (int i = 0; i < MaxStarsDisplay; i++)
	{
		<span class="oi oi-star" aria-hidden="true" style="color:black"></span>
	}
</div>

@code {
		[Parameter]
		public int Stars { get; set; }

		[Parameter]
		public int MaxStars { get; set; }

		public int MaxStarsDisplay { get { return CalculMaxStars(); } }

	int CalculMaxStars()
	{
		if (Stars > MaxStars)
			return MaxStars;

		return MaxStars - Stars;
	}
}
