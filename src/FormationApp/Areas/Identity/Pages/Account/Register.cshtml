@page
@model RegisterModel
@{
	ViewData["Title"] = "S'inscrire";
}

<h1>@ViewData["Title"]</h1>

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
	<div class="container-fluid">
		<div class="row">

			<div class="col-md-4">
				<h4>Creation d'un nouveau compte.</h4>
				<hr />
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="Input.Email"></label>
					<input asp-for="Input.Email" class="form-control" />
					<span asp-validation-for="Input.Email" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Input.Password"></label>
					<input asp-for="Input.Password" class="form-control" />
					<span asp-validation-for="Input.Password" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Input.ConfirmPassword"></label>
					<input asp-for="Input.ConfirmPassword" class="form-control" />
					<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
				</div>

				<button type="submit" class="btn btn-primary">S'inscrire</button>
			</div>

			@*Récupération des informations de l'utilisateur*@
			<div class="col-md-6">
				<div class="form-group">
					<label asp-for="Input.Nom"></label>
					<input asp-for="Input.Nom" class="form-control" />
				</div>

				<div class="form-group">
					<label asp-for="Input.Prenom"></label>
					<input asp-for="Input.Prenom" class="form-control" />
				</div>

				<div class="form-group">
					<label asp-for="Input.Login"></label>
					<div>
						<small><mark>Login</mark> utilisé pour la connexion</small>
					</div>
					<input asp-for="Input.Login" class="form-control" />
				</div>

				<div class="form-group">
					<label asp-for="Input.Service"></label>
					<input asp-for="Input.Service" class="form-control" />
				</div>

				<div class="form-group">
					<label asp-for="Input.IsExterneService"></label>
					<input asp-for="Input.IsExterneService" class="form-control" />
				</div>
			</div>

		</div>
	</div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
