<AuthorizeView>
    <Authorized>
        <a href="Identity/Account/Manage">Bonjour, @context.User.Identity.Name!</a>
        <form method="post" action="Identity/Account/LogOut">
            <button type="submit" class="nav-link btn btn-link">Déconnexion</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a href="Identity/Account/Register">S'inscrire</a>
        <a href="Identity/Account/Login">Connexion</a>
    </NotAuthorized>
</AuthorizeView>
